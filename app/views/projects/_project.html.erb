<div id="project-<%= project.id %>">
<p>Project<%= project.name %></p>
<% @tasks = project.tasks %>
<% @tasks.each do |task| %>
<p>Task Name<%= task.name %></p>
<p>Task Content<%= task.content %></p>
<p><a href="/projects/<%= project.id %>/tasks/<%=task.id%>">Task Link </a></p>
	<% end %>
<p><a href="/projects/<%= project.id %>"> Project Show link </a></p>
<p><%= link_to 'Edit', edit_project_path(project), remote: true %></p>
<p><%= link_to 'Destroy', project_path(project), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete '#{project.name}'?" } %></p>
</div>
<br/>
