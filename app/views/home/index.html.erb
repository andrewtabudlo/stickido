<section class="hero is-fullheight has-bg-img">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-white">
        Stickido
      </h1>
      <h2 class="subtitle has-text-white">
        A productivity app which uses notes to transform your ideas into reality.
      </h2>
      <a class="button" href="users/sign_up">Sign Up</a>
      <% if user_signed_in? %>
        <button class="button"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></button>
      <% else %>
        <button class="button"><%= link_to('Login', new_user_session_path) %></button>
      <% end %>
    </div>
  </div>
</section>
